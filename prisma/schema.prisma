model user {
  id              Int       @id @default(autoincrement())
  username        String    @unique
  email           String    @unique
  password_hash   String
  created_at      DateTime  @default(now())
  updated_at      DateTime  @updatedAt
  snapshots       ikigai_snapshot[]
}

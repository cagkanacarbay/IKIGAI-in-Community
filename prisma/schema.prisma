generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  connection_limit=1
  connect_timeout=10
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
  
}

model ikigai_snapshot {
  id Int    @id @default(autoincrement())
  data      String
  user_id   Int     
  user      user    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  // items     items[]
}

